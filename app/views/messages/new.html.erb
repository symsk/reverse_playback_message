<% if alert %>
  <div class="alert"><%= alert %></div>
<% end %>
<div class="message-container">
  <div class="container">
    <div class="main">
      <div class="message-fukidasi-img-area">
        <%= image_tag "message_fukidasi.png", size: "430x280" %>
      </div>
      <div>
        <%= form_with model: @message, local: true do |f| %>
          <%= f.hidden_field :uuid %>
          <%= f.text_area :message, id: "text-area", maxlength: 50, cols: 30, rows: 4 %><br>
          <p class="text-counter">あと<span id="text-lest">50</span>文字入力できるよ！</p>
          <%= f.submit "保存して共有ページへ", class: "bg-warning text-white text" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'counter' %>