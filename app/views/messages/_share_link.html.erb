<p class="mt-3">このページを共有しよう！</p>
<input id="copyTarget" type="text" value="<%= "#{url}" %>" readonly>
<div>
  <button onclick="copyToClipboard()" class="url-btn bg-warning text-white">URLをコピー</button>
</div>
  <p><%= link_to "Twitterでシェア" , "https://twitter.com/share?url=#{url}", class: "message-share", target: "_blank" %></p>
  <p><%= link_to "LINEでシェア" , "https://line.me/R/msg/text/?#{url}", class: "message-share", target: "_blank" %></p>
  <br>
<script>
  function copyToClipboard() {
    let copyTarget = document.getElementById("copyTarget");
    copyTarget.select();
    document.execCommand("Copy");
    alert("コピーしました！ : " + copyTarget.value);
  }
</script>